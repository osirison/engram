{
  "mcpServers": {
    "engram": {
      "command": "node",
      "args": ["/absolute/path/to/your/engram/apps/mcp-server/dist/main.js"],
      "env": {
        "DATABASE_URL": "postgresql://postgres:password@localhost:5432/engram",
        "REDIS_URL": "redis://localhost:6379",
        "QDRANT_URL": "http://localhost:6333",
        "NODE_ENV": "production"
      }
    }
  }
}